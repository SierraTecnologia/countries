{
    "name": "sierratecnologia/countries",
    "description": "SierraTecnologia Countries is a simple and lightweight package for retrieving country details with flexibility. A whole bunch of data including name, demonym, capital, iso codes, dialling codes, geo data, currencies, flags, emoji, and other attributes for all 250 countries worldwide at your fingertips.",
    "type": "library",
    "keywords": [
        "flags",
        "sierratecnologia",
        "country",
        "flexible",
        "countries",
        "currencies",
        "geographic",
        "languages",
        "dialling",
        "demonym",
        "simple",
        "emoji",
        "svg"
    ],
    "license": "MIT",
    "homepage": "https://sierratecnologia.com",
    "support": {
        "email": "help@sierratecnologia.com",
        "issues": "https://github.com/sierratecnologia/countries/issues",
        "source": "https://github.com/sierratecnologia/countries",
        "docs": "https://github.com/sierratecnologia/countries/blob/master/README.md"
    },
    "authors": [
        {
            "name": "SierraTecnologia LLC",
            "homepage": "https://sierratecnologia.com",
            "email": "help@sierratecnologia.com"
        },
        {
            "name": "Abdelrahman Omran",
            "homepage": "https://omranic.com",
            "email": "me@omranic.com",
            "role": "Project Lead"
        },
        {
            "name": "The Generous PHP Community",
            "homepage": "https://github.com/sierratecnologia/countries/contributors"
        }
    ],
    "require": {
        "php": "^7.2|^8.0"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Country\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Country\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Country\\Providers\\CountryServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "phpro/grumphp": "^1.3"
    }
}
